<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/msgContainerM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/tvUserM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingLeft="8dp"
            android:text="TextView"
            android:textStyle="bold"
            tools:text="Eliseo" />

        <LinearLayout
            android:id="@+id/lyMessageBG"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/rounded"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivImageContentM"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:padding="8dp"
                android:visibility="gone"
                app:srcCompat="@mipmap/ic_launcher"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tvContentM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:textColor="@color/white"
                tools:text="Hola amigo como estas,  yo muy bien por todo lo que paso"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tvDateM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold|italic"
                tools:text="9:30" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>